{
  "datasets": ["PathMNIST", "BloodMNIST"],
  "image_size": [28, 28],
  "num_channels": 3,
  "train_transforms": {
    "RandomRotation": {
      "degrees": 15
    },
    "RandomHorizontalFlip": {
      "p": 0.5
    },
    "ColorJitter": {
      "brightness": 0.1,
      "contrast": 0.1,
      "saturation": 0.1
    },
    "ToTensor": true,
    "Normalize": {
      "mean": [0.5, 0.5, 0.5],
      "std": [0.5, 0.5, 0.5]
    }
  },
  "eval_transforms": {
    "ToTensor": true,
    "Normalize": {
      "mean": [0.5, 0.5, 0.5],
      "std": [0.5, 0.5, 0.5]
    }
  },
  "split_strategy": {
    "type": "ratio",
    "train": 0.70,
    "val": 0.15,
    "test": 0.15
  }
}
